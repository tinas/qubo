{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": false,
    "outDir": "./dist/cjs",
    "rootDir": "./lib",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": false,
    "removeComments": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["lib/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "playground",
    "**/__tests__/**",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
} 